{:slug "extra-pass"
 :name "Extra Pass"
 :set-slug "premiere"
 :card-type :card-type/COACHING_CARD
 :fate 8
 :call {:call/id "extra-pass-call"
       :call/description "After a successful Pass, draw a card. The receiver may immediately attempt another Pass without â†·."
       :call/requires [:bashketball/has-ball? :doc/state :target/passer-id]
       :call/targets [:target/passer-id :target/receiver-id]
       :call/effect {:effect/type :bashketball/initiate-skill-test
                     :skill-test/type :pass
                     :skill-test/player-id :target/passer-id
